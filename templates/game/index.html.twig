{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container-md mt-3">

    <div class="row justify-content-center">
        <div class="col-6 bg-light">
            <div class="row">
                <div class="col-6 bg-light p-0 border">
                    <div class="d-flex flex-row justify-content-center party-header bg-dark bg-gradient">
                        <div class="p-0">
                        Party Name
                        </div>
                    </div>
                    <div class="d-flex justify-content-center party-name  " id="{{game.id}}">
                        <div class="align-self-center lead mt-2 mb-2 ">{{game.name}} </div>
                        {# <h1 class="display-6 align-self-center"> asd</h1> #}
                    </div>
                </div>
                <div class="col-6 bg-light p-0 border">
                    <div class="d-flex flex-row justify-content-center party-header bg-dark bg-gradient">
                        <div class="p-0">
                        Activity
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-center ">
                        <div class="align-self-center lead mt-2">{{game.title}} </div>
                        {# <h1 class="display-6">{{game.title}}</h1> #}
                    </div>
                </div>
            </div>
            <div class="row border">
                <div class="col-3 lead p-2">
                <b>Members ({{game.players|length}}):</b>
                </div>
                <div class="col-9 lead p-2">
                |
                    {% for player in game.players %}
                        {{player.username}} | 
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-3 bg-light p-0 border">
            <div class="d-flex flex-row justify-content-center party-header bg-dark bg-gradient">
                <div class="p-0">
                Description
                </div>
            </div>
            <div class="d-flex flex-row justify-content-center ">
                <p class="lead m-2">
                    {{game.description}}   
                </p>
            </div>
        
        </div>
    </div>



    <div class="row justify-content-center mt-3">
        <div class="col-9 bg-light">
            <div class="d-flex flex-row justify-content-center vote-header bg-dark bg-gradient">
                <div class="p-0">
                Place your vote
                </div>
            </div>
            {{ form_start(form) }}
            
            <div class="d-flex flex-row justify-content-center">
                {# errors #}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>
                <div class="p-2 ">
                    <h1 id='load-date'class="display-6 form-date m-0">{{date|date("Y-m-d")}}</h1>

                </div>
                <div class="p-2 ">
                    {{ form_row(form.vote) }}
                </div>
                <div class="p-2 ">
                    <label for="amount"><h1 class="display-6 m-0">Time: </h1></label>  
                </div>
                <div class="p-2 ">
                    <input class="time-display" type="text" id="amount" readonly style="">
                </div>
            </div>
            <!-- SLIDER -->
            <div class="d-flex flex-row justify-content-center">
                <div class="p-2 w-80 flex-fill">
                    <div id="slider-range" class="mt-4 mb-3"></div>
                </div>
            </div>

            <div class="d-flex flex-row justify-content-center align-items-center">
                <div id="my-votes" class="p-2 lead me-auto">
                    {# VOTE DISPLAY IN THIS CONTAINER #}
                </div>
                <div class="p-2 lead">
                    Max time (min):
                </div>
                <div class="p-2 ">
                    {{ form_row(form.maxLength) }}
                </div>
                <div class="p-2 ">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-9 bg-light p-0">
            <div class="d-flex flex-row justify-content-center">
                <div class="p-0">
                {% include 'game/comp/calendar.html.twig' with {  calendarArray : calendarArray } %}
                </div>
            </div>
        </div>
    </div>

</div>    
    
    {# <div class="row justify-content-center mt-3">
     <div class="col-auto col-8 p-0">
        {% include 'game/comp/calendar.html.twig' with {  calendarArray : calendarArray } %}
        </div>
        
       
    </div> #}

    {# <div class="row"> #}
   
    
